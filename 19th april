n=int(input(Enter limit: "))
a=0
b=1
if(n<=2):
 print("Please enter a valid number")
else:
 print(a,end=" ")
 print(b,end=" ")
 for i in range(n-2):
  c=a+b
  print(c,end=" ")
  a=b
  b=c
  
